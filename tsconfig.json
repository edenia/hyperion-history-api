{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "diagnostics": false,
    "moduleResolution": "NodeNext",
    "sourceMap": false,
    "declaration": false,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src"
  ]
}
