{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "nodenext",
    "sourceMap": false,
    "declaration": false,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "hyperion-explorer",
    "build",
    "plugins/repos"
  ]
}
